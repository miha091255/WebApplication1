<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Система 'Удаленное обучение'", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @{if (Session["Status"] != null)
                            {
                                if (Session["Status"].ToString() == "Администратор")
                                {@Html.ActionLink("Пользователи", "AllUsers", "User")}
                        } }
                    </li>
                    <li>
                        @{if (Session["Status"] != null)
                            {
                                if (Session["Status"].ToString() == "Администратор"||Session["Status"].ToString() == "Преподаватель")
                                {@Html.ActionLink("Задания", "Exercises", "Home")}
                        } }
                    </li>
                    <li>
                        @{if (Session["Login"] != null)
                            {@Html.ActionLink("Профиль", "Prophile", "User")}
                        else
                        {@Html.ActionLink("Вход", "Authorize", "User")} }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – Удаленное обучение</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
